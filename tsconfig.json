{
  "compilerOptions": {
    "module": "nodenext",
    "target": "esnext",
    "lib": ["esnext"],
    "types": ["node", "jest"],
    "outDir": "dist",
    "rootDir": "src",

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "strict": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "skipLibCheck": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "test"]
}
